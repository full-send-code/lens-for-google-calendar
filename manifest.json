{
  "name": "Lens for Google Calendar",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Save and quickly restore custom groups of calendars in Google Calendar",
  "host_permissions": [
    "https://calendar.google.com/*"
  ],
  "action": {
    "default_icon": {
      "128": "icons/multi_calendar_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://calendar.google.com/*"
      ],
      "css": [
        "styles/index.css"
      ],
      "js": [
        "bundle.js"
      ]
    }
  ]
}
